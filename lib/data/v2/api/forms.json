{
    "module": "axis-forms",
    "version": "2.0.2",
    "description": "Comprehensive suite of accessible, mobile-friendly, and beautiful form controls including floating labels and custom inputs.",
    "installation": {
        "full": "https://unpkg.com/axis-twelve@2.0.2/dist/axis-twelve.min.css",
        "module": "https://unpkg.com/axis-twelve@2.0.2/dist/modules/axis-forms.min.css"
    },
    "classes": [
        {
            "name": ".ax-input",
            "description": "Base class for <input> elements.",
            "type": "Base"
        },
        {
            "name": ".ax-select",
            "description": "Base class for <select> elements.",
            "type": "Base"
        },
        {
            "name": ".ax-textarea",
            "description": "Base class for <textarea> elements.",
            "type": "Base"
        },
        {
            "name": ".ax-label",
            "description": "Styled label for form controls.",
            "type": "Element"
        },
        {
            "name": ".ax-form-group",
            "description": "Container for a label and input pair.",
            "type": "Layout"
        },
        {
            "name": ".ax-input-group",
            "description": "Container for floating labels.",
            "type": "Layout"
        },
        {
            "name": ".ax-input--valid",
            "description": "Green border for valid state.",
            "type": "State"
        },
        {
            "name": ".ax-input--invalid",
            "description": "Red border for invalid state.",
            "type": "State"
        },
        {
            "name": ".ax-checkbox",
            "description": "Custom checkbox container.",
            "type": "Component"
        },
        {
            "name": ".ax-radio",
            "description": "Custom radio container.",
            "type": "Component"
        }
    ],
    "examples": [
        {
            "title": "Complete Login Form",
            "description": "A full login form showcasing floating labels, validation states, and layout spacing.",
            "code": "<form class=\"ax-space-y-6\" style=\"max-width: 400px; width: 100%;\" onsubmit=\"return false;\">\n  <div class=\"ax-input-group\">\n    <input type=\"email\" class=\"ax-input\" placeholder=\" \" id=\"email\">\n    <label class=\"ax-label\" for=\"email\">Email Address</label>\n  </div>\n  <div class=\"ax-input-group\">\n    <input type=\"password\" class=\"ax-input\" placeholder=\" \" id=\"pw\">\n    <label class=\"ax-label\" for=\"pw\">Password</label>\n  </div>\n  <div class=\"ax-flex ax-items-center ax-gap-2\">\n    <input type=\"checkbox\" id=\"rem\" class=\"ax-checkbox\">\n    <label for=\"rem\" class=\"ax-text-sm\">Remember me</label>\n  </div>\n  <button type=\"submit\" class=\"ax-btn ax-btn--primary ax-w-full\">Sign In</button>\n</form>"
        },
        {
            "title": "Validation States",
            "description": "Demonstration of valid and invalid input states.",
            "code": "<div class=\"ax-space-y-4\" style=\"max-width: 400px;\">\n  <div class=\"ax-input-group\">\n    <input type=\"text\" class=\"ax-input ax-input--valid\" value=\"Correct value\" id=\"v-1\">\n    <label class=\"ax-label\" for=\"v-1\">Username</label>\n  </div>\n  <div class=\"ax-input-group\">\n    <input type=\"text\" class=\"ax-input ax-input--invalid\" value=\"Oops!\" id=\"v-2\">\n    <label class=\"ax-label\" for=\"v-2\">Error Field</label>\n    <p class=\"ax-text-xs ax-text-red-500 ax-mt-1\">Please provide a valid entry.</p>\n  </div>\n</div>"
        }
    ],
    "customization": {
        "variables": [
            {
                "name": "--ax-border-color",
                "default": "#d1d5db",
                "description": "Default border color"
            },
            {
                "name": "--ax-bg-surface",
                "default": "#f9fafb",
                "description": "Disabled state background"
            }
        ]
    },
    "accessibility": [
        "Always use for/id matching for labels",
        "Use aria-describedby for helper/error text",
        "High-contrast focus rings for keyboard users"
    ],
    "evolution": [
        {
            "version": "v2.0.1",
            "type": "Internal",
            "description": "Refactored input spacing and alignment to use logical properties."
        }
    ]
}